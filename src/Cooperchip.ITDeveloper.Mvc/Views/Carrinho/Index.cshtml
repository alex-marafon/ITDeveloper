@model Cooperchip.ITDeveloper.Mvc.ViewModels.CarrinhoViewModels

@{
    ViewData["Title"] = "Carrinho de Compras";
}

<hr />

<div class="row"> 
    <div class="panel panel-heading">
        <h3>Carinho de compras</h3>
    </div>
    <div class="panel panel-body">
        <table class="table table-hover">
            <caption>Produtos no Carrinho</caption>
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Valor</th>
                    <th>Estoque</th>
                    <th>Validade</th>
                    <th>Estoque</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model.Produtos)
                {
                    <tr>
                        <td>@prod.Nome</td>
                        <td>@prod.Valor</td>
                        <td>@prod.Estoque</td>
                        <td>@prod.Validade</td>
                        <td>@prod.TemEmEstoque</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td><strong>Total:</strong></td>
                    <td>@Model.TotalCarrinho</td>
                </tr>
            </tfoot>
        </table>
        <br />
        <h3>
            @Model.Mensagem
        </h3>
        <hr />
    </div>

</div>
