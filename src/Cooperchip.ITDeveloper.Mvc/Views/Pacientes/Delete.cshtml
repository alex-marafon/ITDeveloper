@model Cooperchip.ITDeveloper.Domain.Models.Paciente

@{
    ViewData["Title"] = "Deletar";
}

    <div class="row">
        <div class="panel panel-heading">
            <h3>Tem certeza que deseja excluir este registro?</h3>
        </div>

        <div class="panel panel-body">
            <div>
                @*<partial name="_Delete_Detalhes" />*@
                <form asp-controller="Pacientes" asp-action="Delete">


                    <input type="hidden" asp-for="Id" />
                    <partial name="_Delete_Detalhes" />

                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-controller="Pacientes" asp-action="Index" class="btn btn-info">Voltar a Lista</a>
                </form>
            </div>
        </div>
    </div>
